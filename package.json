{
  "name": "glammed-up-server",
  "version": "1.0.0",
  "main": "server.js",
  "repository": "https://github.com/oanaprf/glammed-up-server.git",
  "author": "Oana Profir",
  "license": "MIT",
  "scripts": {
    "start": "node server.js",
    "nodemon": "nodemon server.js",
    "test": "jest"
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base"
    ],
    "rules": {
      "implicit-arrow-linebreak": "off",
      "arrow-parens": "off",
      "comma-dangle": "off",
      "function-paren-newline": "off",
      "object-curly-newline": "off",
      "no-underscore-dangle": "off",
      "operator-linebreak": "off",
      "no-confusing-arrow": "off"
    },
    "env": {
      "jest": true
    }
  },
  "prettier": {
    "printWidth": 100,
    "trailingComma": "es5",
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn test"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "*.+(json|css|md)": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "testEnvironment": "node"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.3",
    "jest": "^25.3.0",
    "lint-staged": "^10.1.2",
    "nodemon": "^2.0.2",
    "prettier": "^2.0.2"
  },
  "dependencies": {
    "bcrypt": "^4.0.1",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "firebase-admin": "^8.10.0",
    "lodash": "^4.17.15",
    "mongoose": "^5.9.7"
  }
}
